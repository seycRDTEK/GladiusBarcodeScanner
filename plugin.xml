<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://cordova.apache.org/ns/plugins/1.0"
	id="cordova-plugin-gladius-barcode-scanner"
	version="0.6.1">

	<name>GladiusBarcodeScanner</name>
	<description>Gladius Bar Code Scanner Plugin</description>
	<license>EYC</license>
	<keywords>barcodescanner</keywords>

	<js-module src="www/gladiusBarcodeScanner.js">
		<clobbers target="plugins.gladiusBarcodeScanner" />
	</js-module>


	<!-- android -->
	<platform name="android">
		<config-file target="res/xml/config.xml" parent="/*">
			<feature name="GladiusBarcodeScanner" >
				<param name="android-package" value="com.eyc.plugins.GladiusBarcodeScanner"/>
			</feature>
		</config-file>

		<source-file src="src/android/GladiusBarcodeScanner.java" target-dir="src/com/eyc/plugins/GladiusBarcodeScanner" />
	</platform>
</plugin>
